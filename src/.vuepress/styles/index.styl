  color: #95979F;
  
  margin: 0;
  background-repeat: repeat;
  min-height: 100%;
  box-sizing: border-box;
}

h1 {
  color: #fff;
}

main.page {
  padding-top: 1rem;
  margin-top: 3.6rem;
}

.page .theme-default-content {
  background-color: #191c24;
  border-radius: 1rem;

  h1 {
    padding-top: 2rem;
  }

  h2 {
    border-bottom: 0;
  }
}

.theme-default-content:not(.custom) > *:first-child {
  margin-top: 0;
}

header {
  #main-title {
    font-size: 2rem;
  }

  p.description {
    font-size: 1rem;
  }
}

.navbar {
  background-color: #191c24;

  div.links {
    background-color: #191c24;
    color: #fff;  
  }
}

aside.sidebar {
  background-color: #191c24;
}

.home  {
  div.footer {
    border-top: 0;
  }

  .theme-default-content.custom {
    background-color: #191c24;
    border-radius: 1rem;
    padding: 2rem;
    margin-bottom: 1rem;
  }
}

a:hover {
  color: #95979F;
}

span.site-name:hover {
  color: #3767CE;
}